<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/main"
	    android:orientation="vertical"
	    android:layout_height="fill_parent"
	    android:layout_width="fill_parent">
	    
	    
	<LinearLayout 
	    android:orientation="vertical"
	    android:layout_height="wrap_content"
	    android:layout_width="fill_parent"
	    android:background="#E6E6E6"
	    >    
	<Spinner android:id="@+id/spinner1"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:drawSelectorOnTop="true"/>
	</LinearLayout> 
		
	<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/HorizontalScrollView"
        android:layout_width="fill_parent" android:layout_height="fill_parent">
        
        
		<LinearLayout 
		android:id="@+id/main"
	    android:orientation="vertical"
	    android:layout_height="fill_parent"
	    android:layout_width="fill_parent">
	    
    <!-- Header -->
	    <LinearLayout 
	        android:background="#2E2E2E"
	        android:layout_height="wrap_content"
	        android:layout_width="fill_parent"
	        >
	        <TextView android:id="@+id/header_item1"
	            android:layout_height="fill_parent"
	            android:layout_width="wrap_content"
	            android:height="30dip"
	            android:width="40dip"
	            
	        />
	        <TextView android:id="@+id/header_item2"
	            android:layout_height="fill_parent"
	            android:layout_width="wrap_content"
	            android:height="30dip"
	            android:width="150dip"
	        />
	        <TextView android:id="@+id/header_item3"
	            android:layout_height="fill_parent"
	            android:layout_width="wrap_content"
	            android:gravity="center_horizontal"
	            android:height="30dip"
	            android:width="60dip"
	        />
	        <TextView android:id="@+id/header_item4"
	            android:layout_height="fill_parent"
	            android:layout_width="wrap_content"
	            android:gravity="center_horizontal"
	            android:height="30dip"
	            android:width="60dip"
	        />
	        <TextView android:id="@+id/header_item5"
	            android:layout_height="fill_parent"
	            android:layout_width="wrap_content"
	            android:gravity="center_horizontal"
	            android:height="30dip"
	            android:width="60dip"
	        />
	        <TextView android:id="@+id/header_itemFe"
	            android:layout_height="fill_parent"
	            android:layout_width="wrap_content"
	            android:gravity="center_horizontal"
	            android:height="30dip"
	            android:width="60dip"
	        />
	        <TextView android:id="@+id/header_item6"
	            android:layout_height="fill_parent"
	            android:layout_width="wrap_content"
	            android:gravity="center_horizontal"
	            android:height="30dip"
	            android:width="60dip"
	        />
	        <TextView android:id="@+id/header_item7"
	            android:layout_height="fill_parent"
	            android:layout_width="wrap_content"
	            android:gravity="center_horizontal"
	            android:height="30dip"
	            android:width="60dip"
	        />
	        <TextView android:id="@+id/header_item8"
	            android:layout_height="fill_parent"
	            android:layout_width="wrap_content"
	            android:gravity="center_horizontal"
	            android:height="30dip"
	            android:width="60dip"
	        />
	        
	        
	        
	        <TextView android:id="@+id/header_item20"
	            android:layout_height="fill_parent"
	            android:layout_width="wrap_content"
	            android:gravity="center_horizontal"
	            android:height="30dip"
	            android:width="60dip"
	        />
	        <TextView android:id="@+id/header_item21"
	            android:layout_height="fill_parent"
	            android:layout_width="wrap_content"
	            android:gravity="center_horizontal"
	            android:height="30dip"
	            android:width="60dip"
	        />
	        <TextView android:id="@+id/header_item22"
	            android:layout_height="fill_parent"
	            android:layout_width="wrap_content"
	            android:gravity="center_horizontal"
	            android:height="30dip"
	            android:width="60dip"
	        />
	        <TextView android:id="@+id/header_item23"
	            android:layout_height="fill_parent"
	            android:layout_width="wrap_content"
	            android:gravity="center_horizontal"
	            android:height="30dip"
	            android:width="60dip"
	        />
	        
	        
	        
	    </LinearLayout>
 
		    <!-- List Divider -->
	    <View android:layout_width="fill_parent"
		        android:layout_height="1dip"
	        android:background="?android:attr/listDivider" />
		 
		    <!-- ListView (grid_items) -->
		    <LinearLayout android:id="@+id/layout"
		        android:layout_width="wrap_content"
		        android:layout_height="fill_parent">
		        <ListView android:id="@+id/listview"
		            android:layout_height="fill_parent"
		            android:layout_width="fill_parent"
		            android:scrollingCache="true"
		            android:smoothScrollbar="true"
		            android:scrollX="10px">
		        </ListView>
		        
		    </LinearLayout>
	</LinearLayout>
	</HorizontalScrollView>

</LinearLayout>